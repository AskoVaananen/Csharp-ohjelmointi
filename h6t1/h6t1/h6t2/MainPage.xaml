<Page
    x:Class="h6t1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:h6t1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="Audi" Content="Audi" HorizontalAlignment="Left" Margin="332,257,0,0" VerticalAlignment="Top" Click="CarButton_Click"/>
        <Button x:Name="Sisu" Content="Sisu" HorizontalAlignment="Left" Margin="482,257,0,0" VerticalAlignment="Top" Click="TruckButton_Click"/>
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="644,257,0,0" VerticalAlignment="Top" Click="ResetButton_Click"/>
        <TextBlock x:Name="CarTextBlock" HorizontalAlignment="Left" Margin="351,346,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" RenderTransformOrigin="-0.177,-1.6"/>
        <TextBlock x:Name="TruckTextBlock" HorizontalAlignment="Left" Margin="502,346,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

    </Grid>
</Page>
