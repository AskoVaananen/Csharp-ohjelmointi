<Page
    x:Class="h6t1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:h6t1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="truckButton" Content="Trucks" HorizontalAlignment="Left" Margin="168,208,0,0" VerticalAlignment="Top" Click="truckButton_Click"/>
        <Button x:Name="carButton" Content="Cars" HorizontalAlignment="Left" Margin="281,208,0,0" VerticalAlignment="Top" Click="carButton_Click"/>
        <Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="386,208,0,0" VerticalAlignment="Top" Click="resetButton_Click"/>
        <TextBlock x:Name="carsTextBlock" HorizontalAlignment="Left" Margin="303,259,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" RenderTransformOrigin="4.083,0.583"/>
        <TextBlock x:Name="trucksTextBlock" HorizontalAlignment="Left" Margin="191,259,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" RenderTransformOrigin="0,0.45"/>
        <TextBlock x:Name="resetTextBlock" HorizontalAlignment="Left" Margin="629,301,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Page>
